<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertProduct">

<TextView
    android:id="@+id/tvInsert"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="INPUT PRODUCT"
    android:textSize="30sp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    />

        <ImageView
            android:id="@+id/imageViewInputProduct"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/sepatu1"
            android:layout_below="@id/tvInsert"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/tvAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+Add"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/imageViewInputProduct"
            android:layout_marginTop="120dp"
            android:layout_marginStart="90dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photo Product"
            android:textSize="20sp"
            android:layout_below="@+id/tvAdd"
            android:layout_toEndOf="@+id/imageViewInputProduct"
            android:layout_marginStart="50dp"
            />
        <EditText
            android:id="@+id/edIdproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewInputProduct"
            android:hint="Id Product"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            />
        <EditText
            android:id="@+id/edNamaproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edIdproduct"
            android:hint="Nama Product"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
        <EditText
            android:id="@+id/edDescriptionproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edNamaproduct"
            android:hint="Description Product"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
        <EditText
            android:id="@+id/edStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edDescriptionproduct"
            android:hint="Stock"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
        <EditText
            android:id="@+id/edColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edStock"
            android:hint="Color"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
        <TextView
            android:id="@+id/tvSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textSize="18sp"
            android:layout_below="@+id/edColor"
            android:layout_marginTop="10dp"
            android:layout_marginStart="34dp"
            />
        <Button
            android:id="@+id/btn_Size1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="38"
            android:layout_below="@+id/tvSize"
            android:layout_marginStart="30dp"
            />
        <Button
            android:id="@+id/btn_Size2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="39"
            android:layout_below="@+id/tvSize"
            android:layout_toEndOf="@+id/btn_Size1"
            android:layout_marginStart="10dp"
            />
        <Button
            android:id="@+id/btn_Size3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="40"
            android:layout_below="@+id/tvSize"
            android:layout_toEndOf="@+id/btn_Size2"
            android:layout_marginStart="10dp"
            />
        <Button
            android:id="@+id/btn_Size4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="41"
            android:layout_below="@+id/tvSize"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/btn_Size3"
            />
        <Button
            android:id="@+id/btn_Size5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="42"
            android:layout_below="@+id/tvSize"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/btn_Size4"
            />
        <Button
            android:id="@+id/btn_Addsize"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:textSize="24sp"
            android:layout_below="@+id/btn_Size5"
            android:layout_marginStart="30dp"
            />
        <Button
            android:id="@+id/btn_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_Addsize"
            android:text="INSERT"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            />
        <TextView
            android:id="@+id/tvBackInputProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            />
</RelativeLayout>