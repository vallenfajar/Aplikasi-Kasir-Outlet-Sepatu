<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThankYou">

    <TextView
        android:id="@+id/tvThankyou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank You"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/tvFortransactionatShoesStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For Transaction at Shoes Store"
        android:layout_below="@+id/tvThankyou"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/tvChecklist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_check_black_24dp"
        android:layout_below="@+id/tvFortransactionatShoesStore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>